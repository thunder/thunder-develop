#
# Copy and rename this file to .env at root of this project.
#

# A common use case is to supply database creds via the environment. Edit settings.php
# like so:
#
# $databases['default']['default'] = [
#   'database' => getenv('DATABASE_NAME'),
#   'driver' => getenv('DATABASE_DRIVER'),
#   'host' => getenv('DATABASE_HOST'),
#   'namespace' => getenv('DATABASE_NAMESPACE'),
#   'password' => getenv('DATABASE_PASSWORD'),
#   'port' => getenv('DATABASE_PORT'),
#   'prefix' => getenv('DATABASE_PREFIX'),
#   'username' => getenv('DATABASE_USER'),
# ];
#

# Set to the env you are configuring: development, staging, production
#ENVIRONMENT=

# Uncomment and populate as needed.
#DATABASE_DRIVER=
#DATABASE_NAME=
#DATABASE_HOST=
#DATABASE_USER=
#DATABASE_PASSWORD=
#DATABASE_PORT=
#DATABASE_PREFIX=

# Another common use case is to set Drush's --uri via environment.
#DRUSH_OPTIONS_URI=http://localhost

# Docker compose environment
# On dev-environment this should be set to $(id --user)
#DOCKER_USER_ID=1000
# On dev-environment this should be set to  $(id --group)
#DOCKER_GROUP_ID=1000
#DOCKER_USER_NAME=docker-user
#DOCKER_GROUP_NAME=docker-group
